/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  margin: 0;
  padding: 0;


}

.userInfo-container {
  display:flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  position: relative;
  padding: 0;
  width: 100%;
  border-bottom: 1px solid #bbb;

}


.userinfo-avatar {
  width: 96rpx;
  height: 96rpx;
  margin: 20rpx;
  border-radius: 50%;
  line-height: 96rpx;

}

.userinfo-nickname {
  color: #bbb;
  height: 96rpx;
  line-height: 96rpx;
    margin: 20rpx;
  font-size: 24px;   

}


.body-container {
  display: flex;
  flex-direction: column;

  width: 100%;
}

.upper-menu {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  flex-wrap: wrap;
  justify-content: center;
}

.choose-course {
  height: 256rpx;
  width: 45%;
  background-color: #eee;
  color: #fff;
  font-size: 24px;
  padding: 0;
  margin: 5px;
  position: relative;
  display: flex;

}

.otherCourse {
  align-items: center;
  justify-content: center;
}
.courseInfo {
  font-size: 16px;
  color: red;
  position: absolute;
  width: 98%;
  height: 48rpx;
  padding-left: 1%;
  padding-right: 1%;
  display: flex;  
  flex-direction: column;
  justify-content: flex-end;
  background: -webkit-linear-gradient(top,rgba(0, 0, 0, 0.5),rgba(0, 0, 0, 0.0))
}

.chooseCourseDetail {
  text-align: center;
  width: 100%;
  height: 256rpx;
  line-height: 256rpx;
}